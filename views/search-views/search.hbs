<h2>Search Results</h2>

<div class="searchResultsContainer">
    <div class="movieContainer">
        <h2>Book Results</h2>
        {{#each bookResults}}
        <div class="movieBox">
            <a href="/books/details/{{_id}}"><img src="{{coverArt}}" alt="Cover image for {{title}}"></a>
            <h3>{{title}}</h3>
        </div>
        {{/each}}
    </div>

    <div>
        <h2>Author Results</h2>
        {{#each authorResults}}
        <div>
            <a href="/authors/details/{{_id}}"><img src="{{picture}}" alt="Picture for {{firstName}} {{lastName}}"></a>
            <h3>{{firstName}} {{lastName}}</h3>
        </div>
        {{/each}}
    </div>
</div>